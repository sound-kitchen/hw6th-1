<h1>새로운 글</h1>

<%= form_for :post, url: posts_path do |f| %>
  <div class="contentform">
    <div class="form-group">
      <p><%= f.label :제목 %><span>*</span></p>
      <span class="icon-case"><i class="fa fa-diamond"></i></span>
        <%= f.text_field :title %>
    </div>

    <div class="form-group">
      <p><%= f.label :내용 %><span>*</span></p>
      <span class="icon-case"><i class="fa fa-comments-o"></i></span>
        <%= f.text_area :body %>
    </div>

    <div class="form-group">
      <%= f.submit "저장", class: 'submit' %>
    </div>
  </div>
<% end %>

<div class="button dark">
  <%= link_to '뒤로가기', posts_path %>
</div>
